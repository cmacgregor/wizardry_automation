# Wizardry Store User ID (required)
# Copy this file to .env and fill in your actual User ID
USER_ID=YOUR_USER_ID_HERE

# Timezone (optional, defaults to America/New_York)
TZ=America/New_York

# Run bot immediately on container startup (optional, defaults to false)
# Set to 'true' to run the automation script once when the container starts,
# in addition to the weekly Monday 10:00 AM schedule
RUN_ON_STARTUP=false
